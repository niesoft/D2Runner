<Window x:Class="D2Runner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="D2Runner" 
        Icon="logo.ico"
        Height="50" Width="280"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="DigitLabel" TargetType="Label">
            <Setter Property="Width" Value="20" />
            <!-- Фиксированная ширина -->
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Foreground" Value="#c7b377" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="FontFamily" Value="./Fonts/#DiabloFont" />
        </Style>

        <Style x:Key="SeparatorLabel" TargetType="Label" BasedOn="{StaticResource DigitLabel}">
            <Setter Property="Foreground" Value="#c7b377" />
            <Setter Property="FontFamily" Value="./Fonts/#DiabloFont" />
            <!-- Светло-серый для : и . -->
        </Style>
    </Window.Resources>

    <Grid Background="Transparent">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label x:Name="MinTens"   Content="0" Style="{StaticResource DigitLabel}" />
                <Label x:Name="MinOnes"   Content="0" Style="{StaticResource DigitLabel}" />
                <Label Content=":"        Style="{StaticResource SeparatorLabel}" />
                <Label x:Name="SecTens"   Content="0" Style="{StaticResource DigitLabel}" />
                <Label x:Name="SecOnes"   Content="0" Style="{StaticResource DigitLabel}" />
                <Label Content="."        Style="{StaticResource SeparatorLabel}" />
                <Label x:Name="MSecTens"  Content="0" Style="{StaticResource DigitLabel}" />
                <Label x:Name="MSecOnes"  Content="0" Style="{StaticResource DigitLabel}" />
            </StackPanel>

            <!-- Статистика -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,0">
                <Label x:Name="MinLabel" Content="" Foreground="#85c590" FontSize="13" HorizontalAlignment="Center" FontFamily="./Fonts/#DiabloFont" />
                <Label x:Name="MaxLabel" Content="" Foreground="#8651a0" FontSize="13" HorizontalAlignment="Center" FontFamily="./Fonts/#DiabloFont" />
                <Label x:Name="AvgLabel" Content="" Foreground="#82c5ff" FontSize="13" HorizontalAlignment="Center" FontFamily="./Fonts/#DiabloFont"/>
            </StackPanel>
        </StackPanel>
    </Grid>
    
</Window>